{
  "manifest_version": 3,
  "name": "مذكّر الورد اليومي",
  "version": "1.3.4",
  "description": "مُذكِّر الوِرد اليومي - يساعدك على المداومة على ورد القرآن اليومي مع تذكيرات ذكية وعرض جميل للآيات. مجاني وبدون إعلانات.",
  "permissions": [
    "alarms",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://api.quran.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/core/assets/icons/icon16.png",
      "48": "src/core/assets/icons/icon48.png",
      "128": "src/core/assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/core/assets/icons/icon16.png",
    "48": "src/core/assets/icons/icon48.png",
    "128": "src/core/assets/icons/icon128.png"
  }
}
